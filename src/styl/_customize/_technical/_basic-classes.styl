.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	font 2em $Bold
	margin-bottom 40px
	
.title
	display inline-flex
	align-items center
	justify-content flex-start
	text-transform uppercase
	font 1.5em $ExBold
	margin-bottom 55px
	color $basic-black-color
	svg
		display block
		width 64px
		height 16px
		fill $accent-color
		flex none
		margin-left 70px
		
	&-absolute
		padding-left 60px
		position absolute
		top 0
		left 0
		z-index 2
		
.block-title
	font 1.5em $ExBold
	line-height 1.25
	text-transform uppercase
		
.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	display block
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
		will-change transform
		transition transform .17s ease-in-out
	&:hover
		img
			transform translate(-50%, -50%) scale(1.05, 1.05)
	

.content
	*:last-child
		margin-bottom 0 !important
	*:first-child
		margin-top 0 !important
			
	h2,h3,h3,h4,h5,h6
		font-family $Med
		
	h4,h5,h6
		margin-bottom 30px
		
	h2
		font-size 32px
		color $accent-color
		margin-bottom 30px
		
	h3
		font-size 26px
		margin-bottom 30px
		color $accent-color
		
	hr
		display block
		width 100%
		height 2px
		background-color #e3e3e3
		opacity .25
		margin 30px 0
		
	a
		color $accent-color
		&:hover
			color $secondary-color
			
	i, em
		font-style italic
		
	p
		margin-bottom 30px
		
	img
		display block
		width 100%
		margin 60px auto
		
		
	p, h2,h3,h4,h5,h6,ul,ol,blockquote
		max-width 860px
		
		
	strong, b
		font-family $Bold
		
	p + ul,
	p + ol,
	h2 + ul,
	h2 + ol,
	h3 + ul,
	h3 + ol
		margin-top -15px
		

	ul, ol
		padding-left 15px
		margin-bottom 30px
		li
			display block
			position relative
			margin-bottom 20px
			
			&:last-child
				margin-bottom 0
				
	ul
		li
			padding-left 16px
			&:before
				pseudo()
				width 6px
				height 6px
				border-radius 50%
				margin-right 4px
				background-color $accent-color
				position absolute
				left 4px
				top 8px
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px
				font-family $ExBold
				
	blockquote
		display block
		position relative
		font 24px $Med
		font-style italic
		margin 50px 0
		padding-left 40px
		&:before 
			pseudo()
			position absolute
			top 0
			left 0
			width 30px
			height 30px
			background url('../img/icons/svg/quote.svg') 50% no-repeat / contain

.hidden-desktop
	display none 