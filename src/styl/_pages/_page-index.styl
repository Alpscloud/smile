.services
	&-description
		flex 1
		width 100%
		max-width 600px
		margin-right 20px
		background-color #F5F5F5
		border-radius 0 0 0 250px
		padding 50px 80px
		min-height 460px
		
		h2,h3
			@extends .block-title
			margin-bottom 30px
		
		p
			margin-bottom 15px
			&:last-child
				margin-bottom 0
				
	&-cards
		display flex
		flex-wrap wrap
		justify-content flex-start
		margin-left -10px
		margin-right -10px
		flex 1
		margin-bottom -20px
		
.service-card
	display flex
	flex-direction column
	height 100%
	min-height 460px
	border 4px solid $accent-color
	background-color $accent-color
	color $basic-white-color
	text-align center
	padding 85px 20px 40px
	.block-title
		margin-bottom 15px
		flex 1
	img
		display block
		flex none
		margin 0 auto 50px auto
		height 100px
		width auto
		transition filter .17s ease-in-out
	.btn-simple
		span
			border-color $basic-white-color
			color $basic-white-color
	&:hover
		color $text-color
		background-color transparent
		img
			filter brightness(0) saturate(100%) invert(62%) sepia(53%) saturate(3587%) hue-rotate(171deg) brightness(88%) contrast(89%)
		.btn-simple
			span
				border-color $secondary-color
				background-color $secondary-color
	&__wrapper
		padding-left 10px
		padding-right 10px
		margin-bottom 20px
		
// Partners
.partners
	margin-bottom -30px
.partner
	flex-col-center()
	margin-bottom 30px
	img
		@extends .content-img
		opacity .5
		max-height 125px
		max-width 190px