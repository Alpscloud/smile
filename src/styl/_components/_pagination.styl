.pagination
	ul
		white-space nowrap
		display flex
		flex-wrap nowrap
		align-items center
		justify-content flex-start
	li
		display inline-block
		margin-right 20px
		&:last-child
			margin-right 0
		&:first-child
			svg
				transform translate(-50%, -50%) scaleX(-1)
			
	&-link
		flex-col-center()
		width 35px
		height 35px
		border 2px solid transparent
		border-radius 0 0 0 15px
		font 16px $ExBold
		color $basic-black-color
		&:hover
			border-color $accent-color
			
		&__arrow
			border-color $accent-color
			position relative
			svg
				width 16px
				height 16px
				position absolute
				position-center()
				transition fill .17s ease-in-out
			&:hover
				border-color $secondary-color
				background-color $secondary-color
				svg
					fill $basic-white-color
		
	.is-active
		background-color $accent-color
		color $basic-white-color
		border-color $accent-color
		&:hover
			border-color $accent-color