.btn
	display inline-block
	transition all .17s ease-in-out
	backface-visibility hidden
	padding-right 7px
	border-right 9px solid $secondary-color
	flex none
	transition all .17s ease-in-out
	span
		display block
		padding 10px 25px
		background-color $accent-color
		border-radius 0 0 0 30px 
		color $basic-white-color
		text-transform uppercase
		font 1.25em $ExBold
		transition all .17s ease-in-out
		

	
	&:hover
		border-color $accent-color
		span
			background-color $secondary-color
	
	&-secondary
		border-color $accent-color
		span
			background-color $secondary-color
		&:hover
			border-color $secondary-color
			span
				background-color $accent-color
				
	&-simple
		padding-right 0
		border-right none
		span
			background-color transparent
			border 2px solid $accent-color
			color $text-color
		&:hover
			span
				background-color $accent-color
				color $basic-white-color
				
		
	&-close
		display inline-block
		width 30px
		height 30px
		svg
			svg()
			fill $secondary-color
		&:hover
			svg
				fill $accent-color
		
	&-submit
		width 26px
		height 24px
		display inline-block
		position absolute
		vertical-center()
		right 0
		margin-top -4px
		svg
			svg()
			fill $secondary-color
		&:hover
			svg
				fill $accent-color

		
	&-help
		position fixed
		z-index 15
		right 0
		bottom 20px
		text-align right
		span
			font-size 18px
			line-height 1.25
			border-radius 0 0 0 40px
		

	&-hamburger
		display inline-block
		flex none
		width 50px
		height 50px
		position relative
		margin-left 30px
		transform translateX(7px)
		span
			width 27px
			height 2px
			background-color $basic-black-color
			display block
			margin 6px auto

		