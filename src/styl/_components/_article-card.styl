.articles-cards
	margin-left -50px
	margin-right -50px
	
	&__homepage
		
		.article-card
			&__content
				border-right 1px solid $accent-color
				padding 0 50px 35px
			&__thumbnail
				width calc(100% - 100px)
				margin 0 auto 45px auto
				padding-top 45%
			&__wrapper
				padding-left 0
				padding-right 0
				margin-bottom 75px
				&:nth-child(4n)
					.article-card__content
						border-right none
				
	
.article-card
	height 100%
	display flex
	flex-direction column
	&__content
		flex 1
	&__wrapper
		padding-left 50px
		padding-right 50px
		margin-bottom 110px
	&__thumbnail
		padding-top 56.25%
		margin-bottom 45px
		position relative
		&:before
			pseudo()
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba($accent-color, .6)
			z-index 2
			transition opacity .17s ease-in-out
			opacity 0
		&:after
			pseudo()
			position absolute
			position-center()
			z-index 3
			width 64px
			height 30px
			background url('../img/icons/svg/eye.svg') 50% no-repeat / contain
			transition all .17s ease-in-out
			opacity 0
			margin-top 15px
		&:hover
			&:before
				opacity 1
			&:after
				margin-top 0
				opacity 1
	&__title
		font 1.315em $Med
		margin-bottom 12px
		text-transform uppercase
		a
			color inherit
			&:hover
				color $accent-color
				
.article-date
	color $light-text-color
	text-transform uppercase
	font-size 14px