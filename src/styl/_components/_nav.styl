.nav
	flex 1
	&-overlay
		display none
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
	&-wrapper
		flex 1
		margin-left 30px
	&-content
		display flex
		align-items center
		justify-content space-between

		.btn
			margin-right 40px
			
		.logo-wrapper
			width 100%
		
	ul
		display flex
		justify-content space-around
		align-items center
		li
			margin-right 20px
			&:last-child
				margin-right 0
			&.current-menu-item
				a
					border-color $accent-color
				
		a
			display block
			padding 12px 18px
			text-transform uppercase
			font 1.25em $ExBold
			color #424241
			border 2px solid transparent
			border-radius 0 0 0 40px
			&:hover
				color $accent-color