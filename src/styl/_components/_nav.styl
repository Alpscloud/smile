.nav
	flex 1
	&-wrapper
		flex 1
		margin-left 30px
		display flex
		align-items center
		justify-content space-between
		
	ul
		display flex
		justify-content space-around
		align-items center
		li
			margin-right 20px
			&:last-child
				margin-right 0
			&.current-menu-item
				a
					border-color $accent-color
				
		a
			display block
			padding 12px 18px
			text-transform uppercase
			font 1.25em $ExBold
			color #424241
			border 2px solid transparent
			border-radius 0 0 0 40px
			&:hover
				color $accent-color