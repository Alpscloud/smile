+max-screen(1365px)
	.container
		padding-left 15px
		padding-right 15px
		
	.promo-slide
		padding-left 0
		
	.langs-tablet
		display block
		
	// Header

			
	.nav
		order 2
		flex none
		margin-bottom 30px
		&-wrapper
			position fixed
			top 0
			left 0
			width 100%
			z-index 20
			display flex
			justify-content flex-end
			margin 0
			opacity 0
			visibility hidden
			pointer-events none
			transition all .23s ease-in-out
			&.is-opened
				opacity 1
				visibility visible
				pointer-events auto
				
				.nav-content
					transform translateX(0)
		&-overlay
			display block
			z-index 9
			
			
		&-content
			background-color $basic-white-color
			width 350px
			flex-direction column
			align-items flex-start
			justify-content flex-start
			position relative
			z-index 10
			height 100vh
			overflow-y auto
			padding 50px 15px 0 15px
			will-change transform
			transition all .23s ease-in-out
			transform translateX(102%)
			div
				width 100%
			.logo-wrapper
				display flex
				padding-bottom 15px
				margin-bottom 15px
				border-bottom 1px solid #c4c4c4
				
			.btn-close
				display inline-block
				position absolute
				top 10px
				right 10px
			
			.langs
				order 1
				margin-left 0
				margin-bottom 30px
				
			.btn
				order 3
				margin-bottom 30px
				margin-right 0
				
			.socials
				order 4
				padding-bottom 50px
			
		ul
			display block
			
			li
				display block
				margin-right 0
				margin-bottom 20px
				&:last-child
					margin-bottom 0
					
	.visible-pre-tablet
		display block 
		
	// blog

	.title-absolute
		padding-left 0
		

	.advantages
		width calc(100% + 30px)
		margin-left -15px
		margin-right -15px
		left auto
		margin-top 40px
		margin-bottom -30px
		
	.advantage
		padding-left 20px
		&__wrapper
			padding-left 15px
			padding-right 15px
			margin-bottom 30px
		

