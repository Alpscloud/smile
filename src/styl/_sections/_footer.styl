.footer
	padding-bottom 100px
	
	&-navs
		flex 1
		border-top 2px solid $accent-color
		padding-top 75px
		
	&-nav
		margin-right 12%
		&__title
			font 1.315em $Med
			margin-bottom 20px
		&:last-child
			margin-right 0
		li
			margin-bottom 20px
			&:last-child
				margin-bottom 0
		a
			color $text-color
			font 1.315em $Reg
			&:hover
				color $accent-color
	



		

.subscribe
	width 100%
	min-width 280px
	max-width 390px
	flex 1
	margin-left 50px
	display flex
	flex-wrap wrap
	flex-direction column
	justify-content space-between
	position relative
	margin-top -12px

	&-text
		margin-bottom 25px
		font-size 14px
		p
			max-width 260px
		.block-title
			margin-bottom 22px
	&-success
		position absolute
		top -2px
		right -2px
		bottom -2px
		left -2px
		z-index 5
		background-color $basic-white-color
		flex-col-center()
		text-align center
		opacity 0
		visibility hidden
		pointer-events none
		transition all .23s ease-in-out
		&.is-success
			opacity 1
			visibility visible
			pointer-events auto
		
	
		.block-title
			margin-bottom 25px
		
		.btn-close
			position absolute
			top 0
			right 0
			
		&__ic
			width 70px
			height 70px
			fill none
			display block
			margin 0 auto 20px auto
			stroke-width 3px
			stroke $accent-color
		
	&-form
		&__notice
			color $light-text-color
			font 11px $Reg
			margin-top 14px
			
	&-input
		display block
		width 100%
		padding 0 45px 8px 0
		background-image linear-gradient(to right, #c4c4c4 40%, rgba(255, 255, 255, 0) 20%)
		background-position bottom
		background-size 5px 2px
		background-repeat repeat-x
		text-transform uppercase
		font 13px $Reg
		color $text-color

		&__group
			position relative
			span
				display block
				width 0
				bottom 0
				height 2px
				position absolute
				left 0
				height 2px
				background-color $accent-color
				transition width .17s ease-in-out
		
